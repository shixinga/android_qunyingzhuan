<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shixing.listview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NotifyActivity" />
        <activity android:name=".FlexableActivity" />
        <activity android:name=".ScrollHideActivity" android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".ListViewItemClickActivity" />
    </application>

</manifest>